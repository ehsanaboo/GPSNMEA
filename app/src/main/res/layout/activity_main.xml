<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#b3b6ff"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="GPS Raw Data"
                android:textAllCaps="true"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/txt_READStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_rawview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="10"
            android:layout_margin="2dp"
            android:textColor="@android:color/black"
            android:gravity="bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:weightSum="36"
        android:orientation="horizontal"
        android:background="#000000">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#ff0009c4"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="GPS"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="Status"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="Date"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="Hour"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="Latitude"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="Longitude"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="Altitude"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="Sat"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="Speed"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="Course"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="5"
            android:text="HDOP"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:text="Accuracy"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="36"
        android:orientation="horizontal"
        android:background="#000000">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:maxLines="1"
            android:background="#ff0009c4"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Now"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="5"
            android:id="@+id/txt_GPSStatusC"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="6"
            android:id="@+id/txt_GPSDateC"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="8"
            android:id="@+id/txt_GPSTimeC"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="10"
            android:id="@+id/txt_GPSLatitudeC"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="11"
            android:id="@+id/txt_GPSLongitudeC"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="7"
            android:id="@+id/txt_GPSAltitudeC"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="2"
            android:id="@+id/txt_GPSSateliteC"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="7"
            android:id="@+id/txt_GPSSpeedC"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="6"
            android:id="@+id/txt_GPSCourseC"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="5"
            android:id="@+id/txt_GPSHDOPC"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_weight="3"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="5"
            android:id="@+id/txt_GPSAccuracyC"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="36"
        android:orientation="horizontal"
        android:background="#000000">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#ff0009c4"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Last"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="5"
            android:id="@+id/txt_GPSStatusL"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="6"
            android:id="@+id/txt_GPSDateL"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="8"
            android:id="@+id/txt_GPSTimeL"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="10"
            android:id="@+id/txt_GPSLatitudeL"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="11"
            android:id="@+id/txt_GPSLongitudeL"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="7"
            android:id="@+id/txt_GPSAltitudeL"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="2"
            android:id="@+id/txt_GPSSateliteL"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="7"
            android:id="@+id/txt_GPSSpeedL"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="6"
            android:id="@+id/txt_GPSCourseL"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="5"
            android:id="@+id/txt_GPSHDOPL"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:background="#ff9394e3"
            android:layout_margin="2dp"
            android:gravity="center_horizontal"
            android:maxLength="5"
            android:id="@+id/txt_GPSAccuracyL"/>

    </LinearLayout>

</LinearLayout>
